<h1>Eat Da Burger!</h1>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="burg">Burger Name:</label>
        <input type="text" id="burger" name="name">
        <button type="submit">Add Burger</button>
    </div>

</form>

<h2>Burgers that haven't been devoured</h2>

<ul class="list-group">
    {{#each burgers}}
    {{#unless devoured}}
    {{> burgers/burger-block devoured=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>

<ul class="list-group">
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burger-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>
